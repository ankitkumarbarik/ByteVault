{
  "manifest_version": 3,
  "name": "ByteVault",
  "version": "1.0.0",
  "description": "Multi-device cloud-synced link manager.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:5252/*"
  ]
}
